<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homesolocuore"
    android:id="@+id/drawer_layout"
    tools:context=".blood_weather">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start">

        <include layout="@layout/toolbar_activity" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <include layout="@layout/toolbar_down" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F9FBFF">
        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:id="@+id/Text_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giacenze SIT Perugia*"
            android:fontFamily="@font/sfarro_bold"
            android:textColor="#123BA6"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/weather_bg"
            android:layout_centerHorizontal="true"
            android:paddingLeft="38dp"
            android:paddingRight="38dp"
            android:visibility="gone"
            android:scaleY="1.03"/>


        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_bg"
            android:layout_centerInParent="true"
            android:layout_below="@+id/Text_up">

            <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zero"
                    android:layout_span="2"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/drop_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drop" />
                <ImageView
                    android:id="@+id/drop_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drop"
                    android:paddingLeft="20dp"/>
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zero"
                    android:layout_span="2" />
                <ImageView
                    android:id="@+id/weater_zero_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    app:tint="#123BA6" />
                <ImageView
                    android:id="@+id/weater_zero_neg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    android:paddingLeft="20dp"
                    app:tint="#123BA6"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a"
                    android:layout_span="2" />
                <ImageView
                    android:id="@+id/weater_a_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    app:tint="#123BA6"/>
                <ImageView
                    android:id="@+id/weater_a_neg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    android:paddingLeft="20dp"
                    app:tint="#123BA6"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/b"
                    android:layout_span="2" />
                <ImageView
                    android:id="@+id/weater_b_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    app:tint="#123BA6"/>
                <ImageView
                    android:id="@+id/weater_b_neg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    android:paddingLeft="20dp"
                    app:tint="#123BA6"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ab"
                    android:layout_span="2" />
                <ImageView
                    android:id="@+id/weater_ab_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    app:tint="#123BA6"/>
                <ImageView
                    android:id="@+id/weater_ab_neg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    android:paddingLeft="20dp"
                    app:tint="#123BA6"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ab" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun" />
            </TableRow>
        </TableLayout>


        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:id="@+id/Legenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Legenda"
            android:fontFamily="@font/sfarro_bold"
            android:textColor="#123BA6"
            android:textSize="18dp"
            android:layout_below="@+id/table"
            />


        <TableLayout
            android:id="@+id/info_legenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/legenda"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/Legenda">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sun"
                    android:paddingHorizontal="20dp"
                    app:tint="#123BA6"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/partly_cloudy_day"
                    android:paddingHorizontal="20dp"
                    app:tint="#123BA6"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wet"
                    android:paddingHorizontal="20dp"
                    app:tint="#123BA6"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cloud_lightning"
                    android:paddingHorizontal="20dp"
                    app:tint="#123BA6" />
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buona"
                    android:gravity="center"
                    android:fontFamily="@font/sfarro_bold"
                    android:textColor="#123BA6"
                    android:textSize="10dp"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Minima"
                    android:gravity="center"
                    android:fontFamily="@font/sfarro_bold"
                    android:textColor="#123BA6"
                    android:textSize="10dp"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Carenza"
                    android:gravity="center"
                    android:fontFamily="@font/sfarro_bold"
                    android:textColor="#123BA6"
                    android:textSize="10dp"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Emergenza"
                    android:gravity="center"
                    android:fontFamily="@font/sfarro_bold"
                    android:textColor="#123BA6"
                    android:textSize="10dp"/>

            </TableRow>


        </TableLayout>
<TextView
    android:id="@+id/r_1"
    android:layout_below="@+id/info_legenda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:fontFamily="@font/sfarro_bold"
    android:textColor="#123BA6"
    android:textSize="12dp"
    android:text=". I dati si riferiscono al mese di maggio"/>
        <TextView
            android:layout_below="@+id/r_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfarro_bold"
            android:textColor="#123BA6"
            android:textSize="12dp"
            android:text=". Una buona disponibilità non significa che non ci sia bisogno di sangue"/>






    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>