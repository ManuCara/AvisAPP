<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homesolocuore"
    android:id="@+id/drawer_layout"
    tools:context=".Vademecum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upbarr"
        android:orientation="vertical"
        android:gravity="start">
        <include layout="@layout/toolbar_up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/downbar"
        android:orientation="vertical"
        android:gravity="bottom">
        <include layout="@layout/toolbar_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/search_bar_container"
        android:layout_margin="20dp"
        android:layout_below="@+id/upbarr"
        android:background="@drawable/background_round"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/search_lens"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="7dp"
            app:srcCompat="@drawable/search_lens" />
        <EditText
            android:id="@+id/search_bar_vademecum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_for_search"
            android:textColorHint="#83ADFF"
            android:padding="7dp"
            android:fontFamily="@font/sfarro_bold"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            />

    </LinearLayout>
    <ExpandableListView
        android:layout_margin="11.5dp"
        android:layout_below="@+id/search_bar_container"
        android:layout_above="@+id/downbar"
        android:childDivider="@color/transparent"
        android:divider="@color/transparent"
        android:id="@+id/expandable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>