<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:id="@+id/drawer_layout"
    tools:context=".where_we_are">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start">

        <include layout="@layout/toolbar_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/shape"
                android:onClick="primo"
                >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="SEDE AVIS COMUNALE PERUGIA"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/farro_medium"
                    android:textSize="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:drawableEnd="@drawable/where_we_are"
                        android:gravity="center"

                        />
                <TextView
                    android:fontFamily="@font/farro_medium"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_color"
                    android:gravity=""
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:paddingTop="5dp"
                    android:textSize="14dp"
                    android:text="Via G.B Pergolesi, 117, Perugia"


                    />


            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/shape"
                android:onClick="secondo"
                >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="SERVIZIO IMMUNO TRASFUZIONE"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/farro_medium"
                    android:textSize="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:drawableEnd="@drawable/where_we_are"
                        android:gravity="center"

                        />
                    <TextView
                        android:fontFamily="@font/farro_medium"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_color"
                        android:gravity=""
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:paddingTop="5dp"
                        android:textSize="14dp"
                        android:text="Osp. S. Maria della Misericordia, piazzale G. Menghini, 1, Perugia"
                        />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="340dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:onClick="entrambi">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="340dp"
                    android:src="@drawable/mappa"
                    android:background="@drawable/shape"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <include layout="@layout/toolbar_down" />



    </LinearLayout>



    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F9FBFF">
        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>